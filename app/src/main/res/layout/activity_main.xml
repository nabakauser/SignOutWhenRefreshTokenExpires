<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/uiTvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="96dp"
        android:gravity="center_vertical"
        android:text="Enter Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/uiEtUserName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="38dp"
        android:textSize="12sp"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/uiTvName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/uiTvName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/uiTvPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:gravity="center_vertical"
        android:text="Enter Password"
        app:layout_constraintStart_toStartOf="@id/uiTvName"
        app:layout_constraintTop_toBottomOf="@id/uiTvName" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/uiEtPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@id/uiTvPassword"
        app:layout_constraintEnd_toEndOf="@id/uiEtUserName"
        app:layout_constraintTop_toTopOf="@id/uiTvPassword" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/uiButtonLogin"
        android:layout_width="164dp"
        android:layout_height="55dp"
        android:background="@color/black"
        android:text="Login"
        android:textColor="@color/white"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/uiTvPassword"
        app:layout_constraintStart_toStartOf="@id/uiTvPassword"
        app:layout_constraintEnd_toEndOf="@id/uiEtPassword" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/uiTvCurrentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Current time"
        app:layout_constraintTop_toBottomOf="@id/uiButtonLogin"
        app:layout_constraintStart_toStartOf="@id/uiButtonLogin"
        app:layout_constraintEnd_toEndOf="@id/uiButtonLogin"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/uiTvRefreshTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Current time"
        app:layout_constraintTop_toBottomOf="@id/uiTvCurrentTime"
        app:layout_constraintStart_toStartOf="@id/uiTvCurrentTime"
        app:layout_constraintEnd_toEndOf="@id/uiTvCurrentTime"/>

</androidx.constraintlayout.widget.ConstraintLayout>